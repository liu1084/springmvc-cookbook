<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jim.portal.entity.BooksEntity" table="books" schema="ebook">
        <id name="id">
            <column name="id" sql-type="bigint(30) unsigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text"/>
        </property>
        <property name="cover">
            <column name="cover" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="author">
            <column name="author" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="isbn">
            <column name="isbn" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="year">
            <column name="year" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="pages">
            <column name="pages" sql-type="int(10)"/>
        </property>
        <property name="language">
            <column name="language" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="size">
            <column name="size" sql-type="float" precision="-1"/>
        </property>
        <property name="format">
            <column name="format" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="category">
            <column name="category" sql-type="bigint(10)"/>
        </property>
        <property name="rating">
            <column name="rating" sql-type="tinyint(2)"/>
        </property>
    </class>
</hibernate-mapping>